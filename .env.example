# Telegram API Credentials (get from https://my.telegram.org)
API_ID=your_api_id
API_HASH=your_api_hash
PHONE_NUMBER=+1234567890

# Bot Configuration
SOURCE_GROUP=Alloy
TARGET_USER=Imelda

# Database
DATABASE_PATH=./data/stores.db

# Docker User/Group IDs (Linux only)
# Set to your host user ID, or 0 if running as root
# On Mac/Windows: leave as default (1000)
PUID=1000
PGID=1000

# Test Mode (set to 'true' to enable)
# When enabled: messages are NOT forwarded, database is NOT modified
# Useful for testing without affecting production data
TEST_MODE=false

# Logging
LOG_LEVEL=INFO
